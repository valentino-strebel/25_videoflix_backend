# --- Superuser (used by your setup scripts, not by settings.py) ---
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=adminpassword
DJANGO_SUPERUSER_EMAIL=admin@example.com

# --- Core ---
SECRET_KEY="change-me"
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:5500,http://127.0.0.1:5500

# --- CORS ---
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# --- Database (PostgreSQL) ---
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=db
DB_PORT=5432

# --- Redis / Cache / RQ ---
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_LOCATION=redis://redis:6379/1
REDIS_DB_CACHE=1
REDIS_DB_RQ=0

# --- Email ---
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_email_user
EMAIL_HOST_PASSWORD=your_email_user_password
EMAIL_USE_TLS=True


# --- Frontend link building for emails ---
FRONTEND_URL=http://localhost:3000
EMAIL_VERIFICATION_PATH=/verify-email
PASSWORD_RESET_PATH=/reset-password

# --- Security flags (set to True in production behind HTTPS) ---
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# --- Video / HLS ---
VIDEO_ALLOWED_RESOLUTIONS=120p,360p,720p,1080p

# --- Logging ---
LOG_LEVEL=INFO
